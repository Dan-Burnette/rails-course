<h1><%= @video.title %></h1>

<h3><%= @video.description %></h3>

<iframe width="420" height="315" src="//www.youtube.com/embed/<%= @video.youtube_id %>" frameborder="0" allowfullscreen></iframe>


<ul>
	<% @video.comments.each do |comment| %>
		<li class="comment"> <%= comment.comment %> </li>
		<button class="edit-comment-button">Edit comment</button>
		<input class="comment_id"type="hidden" value="<%=comment.id%>">
		<input class="video_id"type="hidden" value="<%=@video.id%>">
	<% end %>
</ul>


<%= form_tag("/videos/#{@video.id}/comments", method:"post") do %>

	<%= label_tag("comment[comment]", "Write a comment") %>
	<%= text_field_tag("comment[comment]") %>
	<%= hidden_field_tag('comment[video_id]', @video.id) %>
	<%= submit_tag("submit") %>

<% end %>



