  <input type="text" id="title" name="sound[title]">

  <label for="youtube_id">SoundCloud URL:</label>
  <input type="text" id="youtube_id" name="sound[soundcloud_url]">

  <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">

  <input type="submit" value="submit">
</form>